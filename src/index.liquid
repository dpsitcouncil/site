	{% for event in collections.event %}
	<a href="{{ event.url }}">
		<div class="event">
			<div class="event-img">
				<img
					src="{{ event.data.img }}"
					alt="{{ event.data.title }} image"
				/>
			</div>
			<div class="event-info">
				<h2>{{ event.data.title }}</h2>
				<p>
					<strong
						>{{ event.data.dates }} | {{ event.data.times }} |
						{{ event.data.venue }}</strong
					>
				</p>
				<p>{{ event.data.description | markdownify }}</p>
			</div>
		</div>
	</a>
	{% endfor %}
</div>

