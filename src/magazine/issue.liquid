---
    layout: main_layout
---

<div class="spacer"></div>
<div class="spacer"></div>


<div class="hero">
  <a href="/magazine">
    <h3>TechBytes Magazine</h3>
  </a>
  <h1>{{ title }}</h1>
  <p>{{ description }}</p>
  <div class="spacer"></div>
  <a class="pdflink" href="{{ pdf }}">Download/View PDF</a>
</div>

<div class="pdf">
  <embed
    src="{{ pdf }}"
    type="application/pdf"
    width="85%"
    height="100%">
</div>

<style>
  h3 {
    text-align: left;
  }

  .pdf {
    margin: 0 7.5vw;
    width: 100%;
    height: 95vh;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .pdflink {
    color: inherit;
    font-size: 0.7em;
    text-decoration: underline;
  }
</style>